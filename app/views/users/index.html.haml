- model_class = User
- content_for :title do
  %h1= model_class.model_name.human count: 2


= render "shared/filter", model_class: model_class

%table.table
  %thead
    %tr
      %th= sortable_header :email, model_class.human_attribute_name(:email)
      %th

  %tbody
    - users.each do |user|
      %tr
        %td= user.email
        %td.text-nowrap


= add_pagination @users
